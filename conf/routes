# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                     controllers.Application.index()

GET         /projects             controllers.Projects.getProjects()
GET         /projects/new         controllers.Projects.createProject()
GET         /projects/:id         controllers.Projects.getProject(id: Long)
POST        /projects/data        controllers.Projects.addProjectData()


GET         /login                controllers.Logins.login()
GET         /logout               controllers.Logins.logout()
POST        /authenticate         controllers.Logins.authenticate()
GET         /registration         controllers.Registrations.registration()
POST        /registration         controllers.Registrations.register()


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         controllers.Assets.at(path="/public", file)
